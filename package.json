{
  "name": "csv-clearview",
  "displayName": "CSV ClearView",
  "description": "A clear and powerful CSV viewer with colored columns, sticky headers, and SQL query capabilities.",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/csv-vscode-plugin.git"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Visualization",
    "Data Science"
  ],
  "keywords": [
    "csv",
    "viewer",
    "sql",
    "editor",
    "table",
    "grid",
    "spreadsheet"
  ],
  "activationEvents": [
    "onLanguage:csv"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "csv",
        "aliases": [
          "CSV",
          "csv"
        ],
        "extensions": [
          ".csv"
        ],
        "mimetypes": [
          "text/csv"
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "csvClearView.edit",
        "displayName": "CSV ClearView",
        "selector": [
          {
            "filenamePattern": "*.csv"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "CSV ClearView",
      "properties": {
        "csvClearView.stickyHeader": {
          "type": "boolean",
          "default": true,
          "description": "Enable sticky header for the first row."
        },
        "csvClearView.alternatingRows": {
          "type": "boolean",
          "default": true,
          "description": "Enable alternating row background colors."
        },
        "csvClearView.forceTextColumnColoring": {
          "type": "boolean",
          "default": false,
          "description": "Force column coloring in Plain Text mode (performance may vary)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.75.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "alasql": "^4.17.0"
  }
}
